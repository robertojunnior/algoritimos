// Seção de Declarações 
var
    contador: inteiro
inicio
// Seção de Comandos 
   escreval ("Olá, seja bem vindo ao contador.")
   escreval ("Este computador vai se auto destruir em 10s")

   contador <- 0
   enquanto (contador >= 10) faca        // pode se fazer contagem regressiva, usando (contador >= 0)
   escreval (contador)
            contador <- contador + 1    // e contador <- contador -1 com o contador com o valor 10

   FimEnquanto
   escreval ("--------------------------------")
   escreval ("Obrigado pot utilizar o contador.")



